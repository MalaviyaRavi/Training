{{> header}}

{{> sidebar}}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row  mb-3 mt-2">
                <div class="col-2"></div>

                <div class="col-8">
                    <h1>Reset Password</h1>
                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row ">

            <div class="col-2"></div>

            <div class="col-md-8">
                <div class="card card-primary">
                    {{#if hasError}}
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                            <use xlink:href="#exclamation-triangle-fill"></use>
                        </svg>
                        <div>
                            {{error}}
                        </div>
                    </div>
                    {{/if}}
                    <div class="card-header text-center">

                        <h3 class="card-title">Reset Password</h3>


                    </div>

                    <form action="" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName">Old Password</label>
                                <input type="password" id="inputName" class="form-control" name="old_password">
                            </div>

                            <div class="form-group">
                                <label for="inputName">New Password</label>
                                <input type="password" id="inputName" class="form-control" name="new_password">
                            </div>

                            <div class="form-group">
                                <label for="inputName">Repeat Password</label>
                                <input type="password" id="inputName" class="form-control" name="repeat_new_password">
                            </div>




                            <div class="form-group text-center">

                                <input type="submit" value="Save New Password" class="btn btn-success float-center">
                            </div>


                        </div>
                    </form>
                    <!-- /.card-body -->
                </div>



            </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->



{{> footer}}