<link rel="stylesheet" href="/css/pagewise/signup.css">

<div class="container mt-2">
    <div class="row justify-content-evenly mt-1">
        <div class="col-5 mt-3 border border-4 px-5 pt-5 pb-2 border-success rounded-3 ">
            <h3 class="text-center text-success" id="otp_label">Varify OTP</h3>



            <div class="my-5 text-center">
                <button id="btnSendOtp" class="btn btn-primary">Send OTP To Register Mobile Number And Email</button>
            </div>

            {{#if error}}

            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{error}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>


            {{/if}}

            <form method="POST">
                <div class="mb-3">
                    <label for="otp" class="form-label">Enter OTP Here</label>
                    <input type="text" class="form-control" id="otp" , name="otp">
                </div>


                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-success px-5 mt-2">Varify OTP</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/pagewise/varify-account.js"></script>