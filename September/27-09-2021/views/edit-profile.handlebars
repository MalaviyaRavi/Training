{{> header}}

<div class="container-fluid vh-100">
    <div class="" style="margin-top:30px">
        <div class=" row rounded d-flex justify-content-center">
            <div class="col-12 mb-3">
                 <div class="text-center">
                    <h3 class="text-primary">Edit Profile</h3>
                </div>
                {{#if isError}}
               <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                    <div>
                        {{error}}
                    </div>
                </div>
                {{/if}}
            </div>

            <form action="/edit-profile/{{user._id}}" autocomplete="off" method="Post", enctype="multipart/form-data">
         <div class="row justify-content-evenly">

             

                <div class="col-md-5 shadow-lg p-5 bg-light">
               
                    

                             <label for="name" class="form-label">Name</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary"><i
                                        class="bi bi-person-plus-fill text-white"></i></span>
                                <input type="text" class="form-control" placeholder="Name" name="name" value={{user.name}}>
                            </div>
                        
                            <label for="username" class="form-label">Username</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary"><i
                                        class="bi bi-person-plus-fill text-white"></i></span>
                                <input type="text" class="form-control" placeholder="Username" name="username" value={{user.username}}>
                            </div>
                            
                           

                            

                            <label for="gender" class="form-label">Gender</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary mr-2"><i class="bi bi-gender-female text-white"></i></span>
                              &nbsp;&nbsp;   Male<input type="radio" class="form-check-input mx-3"  name="gender" value="male"> 
                                Female<input type="radio" class="form-check-input mx-3"  name="gender" value="female">
                            </div>

                            <label for="profile" class="form-label">Profile Pictures</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary"><i class="bi bi-image-fill text-white"></i></span>
                                <input type="file" class="form-control"  name="profile" id="profile" name="profile" value={{user.profile}}>
                            </div>

                         






                       
                </div>

                 <div class="col-md-5 shadow-lg p-5 bg-light">

                            


                            <label for="dob" class="form-label">Date Of Birth</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary"><i class="bi bi-calendar-month text-white"></i></span>
                                <input type="date" class="form-control"  name="dob" value={{user.dob}}>
                            </div>


                            <label for="address" class="form-label">Address</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary"><i class="bi bi-file-text-fill text-white"></i></span>
                                <textarea type="address" class="form-control" rows="5" placeholder="address" name="address">{{user.address}}</textarea>
                            </div>

                            <label for="address" class="form-label">City</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary"><i class="bi bi-geo-fill text-white"></i></span>
                                <select class="form-select" name="city" aria-label="Default select example">
                                    <option selected value="">Select City</option>
                                    <option value="Ahmedabad">Ahmedabad</option>
                                    <option value="Surat">Surat</option>
                                    <option value="Amreli">Amreli</option>
                                </select>
                                
                            </div>

                            


                 </div>




                <div class="d-grid col-7 mt-3 mx-auto">
                    <button class="btn btn-primary" type="submit"><span></span>Save</button>
                </div>
               
           
                     
        </div>
         </form>

           
         </div>
        
    </div>
</div>


{{> footer}}