  <script>
    $.noConflict();
    jQuery(document).ready(function () {
      jQuery.getJSON("http://localhost:3000/category", (data, textStatus) => {
        for (let category of data) {
          console.log("hi" + category);
          let category_link = `<li><a class="dropdown-item"
      href="/dashboard/?category=${category._id}">${category.category_name}</a></li>`
          jQuery(".dropdown-menu").append(category_link);
        }
      })
    })
  </script>


</body>


</html>