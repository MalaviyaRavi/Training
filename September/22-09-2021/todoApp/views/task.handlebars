{{> header}}



<div class="container">
    <div class="d-grid col-6 mx-auto mt-5">
         
        <a class="btn btn-primary" href="/add-task">Add Task</a>
    </div>
    <div class="row mt-3">
        
        <div class="col-3"></div>
        <div class="col-6">
            <table class="table table-striped border">
                    <thead>
                        <tr>
                           
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                         
                        </tr>
                    </thead>
                    <tbody>
                        
                        {{#if countTask}}
                            {{#each task}}
                                <tr>
                                    
                                    <td>{{title}}</td>
                                    <td>{{description}}</td>
                                </tr>
                            {{/each}}

                        {{else}} 
                                <tr>
                                    <td colspan="2">No Task </td>
                                </tr>  
                         {{/if}}   
                            
                        
                        

                        
                        
                    </tbody>
            </table>
        </div>
    </div>
</div>

{{> footer}}