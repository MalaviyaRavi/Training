<style>
  body { color: #fff; background: #fcfdfd; font-family: 'Roboto',
      sans-serif; } .form-control { height: 41px; background: #f2f2f2;
      box-shadow: none !important; border: none; } .form-control:focus {
      background: #e2e2e2; } .form-control, .btn { border-radius: 3px; }
      .signup-form { width: 400px; margin: 30px auto; } .signup-form form {
      color: #999; border-radius: 3px; margin-bottom: 15px; background: #fff;
      box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3); padding: 30px; } .signup-form
      h2 { color: #333; font-weight: bold; margin-top: 0; } .signup-form hr {
      margin: 0 -30px 20px; } .signup-form .form-group { margin-bottom: 20px; }
      .signup-form input[type="checkbox"] { margin-top: 3px; } .signup-form .row
      div:first-child { padding-right: 10px; } .signup-form .row div:last-child
      { padding-left: 10px; } .signup-form .btn { font-size: 16px; font-weight:
      bold; background: #3598dc; border: none; min-width: 140px; } .signup-form
      .btn:hover, .signup-form .btn:focus { background: #2389cd !important;
      outline: none; } .signup-form a { color: #fff; text-decoration: underline;
      } .signup-form a:hover { text-decoration: none; } .signup-form form a {
      color: #3598dc; text-decoration: none; } .signup-form form a:hover {
      text-decoration: underline; } .signup-form .hint-text { padding-bottom:
      15px; text-align: center; }
</style>
<div class="signup-form" style="margin-top: 70px;">
  {{#if msg}}
    <div class="alert alert-success" role="alert">
      {{msg}}
    </div>
  {{/if}}
  <form method="post">
    <h2>
      Edit-Profile
    </h2>
    <hr />
    <div class="form-group">
      <div class="row">
        <div class="col">
          <input
            type="text"
            class="form-control"
            name="first_name"
            placeholder="First Name"
            required="required"
            value={{user.first_name}}
          />
        </div>
        <div class="col">
          <input
            type="text"
            class="form-control"
            name="last_name"
            placeholder="Last Name"
            required="required"
            value={{user.last_name}}
          />
        </div>
      </div>
    </div>
    <div class="form-group">
      <input
        type="txt"
        class="form-control"
        name="username"
        placeholder="Enter Username"
        required="required"
        value={{user.username}}
      />
    </div>
    <div class="form-group">
      <input
        type="email"
        class="form-control"
        name="email"
        placeholder="Email"
        required="required"
        value={{user.email}}
      />
    </div>
    <div class="form-group">
      <input
        type="date"
        class="form-control"
        name="dob"
        placeholder="Enter Your DOB"
        required="required"
        value={{user.dob}}
      />
    </div>
    <div class="form-group">
      <input
        type="txt"
        class="form-control"
        name="mnumber"
        placeholder="Enter Mobile Number"
        required="required"
        value={{user.mnumber}}
      />
    </div>
    <div class="form-group">
      <select class="form-control" name="gender" id="gen">
        <option value="male">
          Male
        </option>
        <option value="female">
          Female
        </option>
        <option value="other">
          Other
        </option>
      </select>
    </div>
    <div class="form-group">
      <textarea
        class="form-control"
        name="address"
        id="address"
        cols="10"
        rows="5"
        placeholder="write your address here..."
      >
        {{user.address}}
      </textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-dark btn-lg">
        Save Changes
      </button>
    </div>
  </form>
  <div class="hint-text" style="color: black;">
    Already have an account?
    <a href="/user/login" style="color: black;">
      Login here
    </a>
  </div>
</div>