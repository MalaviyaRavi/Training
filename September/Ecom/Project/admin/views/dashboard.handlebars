<div class="container">
  <div class="row justify-content-evenly m-3">
    {{#each products}}
      <div class="col-5 shadow-lg p-5 bg-light">
        <img src="/products/{{product_image}}" class="img-fluid" alt="" />
      </div>
      <div class="col-5 shadow-lg p-5 bg-light">
        <h3 class="text-center">
          {{product_name}}
        </h3>
        <p class="text-center">
          {{product_detail}}
        </p>
        <p class="text-center">
          <b>
            Price : â‚¹
            {{product_price}}
          </b>
        </p>
        <p class="text-center">
          Quantity :
          {{product_qty}}
        </p>
        <p class="text-center">
          Category :
          {{product_category.category_name}}
        </p>
        <div class="text-center">
          <a class="btn btn-success" href="/edit-product/{{_id}}">
            Edit Product
          </a>
          <a class="btn btn-danger" href="/delete-product/{{_id}}">
            Delete Product
          </a>
        </div>
      </div>
    {{/each}}
  </div>
